<% if @psot.present? && @post.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      フォームにはエラーが <%= @post.errors.count %>つあります。
    </div>
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>