<ul class="cards7">

<% @posts.each do |post| %>

<%= link_to post_path(post) do %>

    <!-- card -->
    <li class="card7">

    <!-- carrierwaveでサムネイル画像を作りはしましたが、まだ外部のデータベースに画像を保存
